<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidTakeHome" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!-- Custom text appearance style for the title TextView -->
    <style name="TextAppearance.Big.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/fetch_blue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Custom a text appearance style for the item count TextView -->
    <style name="TextAppearance.Italic" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/fetch_blue</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Custom text appearance style for the name row title TextView -->
    <style name="TextAppearance.Small.NameRowTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/fetch_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="Theme.AndroidTakeHome" parent="Base.Theme.AndroidTakeHome" />
